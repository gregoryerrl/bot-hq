# Bot-HQ Configuration
# Copy this file to .env.local and fill in your values

# =============================================================================
# REQUIRED
# =============================================================================

# Anthropic API key (required for agent functionality)
# Get your key at: https://console.anthropic.com/
ANTHROPIC_API_KEY=sk-ant-api03-your-key-here

# =============================================================================
# SERVER CONFIGURATION
# =============================================================================

# Port for the Bot-HQ server (default: 7890)
BOT_HQ_PORT=7890

# Full URL for the Bot-HQ server (used by MCP tools)
BOT_HQ_URL=http://localhost:7890

# =============================================================================
# AGENT CONFIGURATION
# =============================================================================

# Working directory for agents - where your projects/repos live
# Agents will be restricted to this directory for safety
# Default: ~/Projects
BOT_HQ_SCOPE=/Users/your-username/Projects

# Shell to use for terminal sessions (default: $SHELL or /bin/zsh)
# BOT_HQ_SHELL=/bin/zsh

# =============================================================================
# MANAGER SETTINGS
# =============================================================================

# Maximum iterations for task retry loop before requiring human intervention
# Default: 3
# BOT_HQ_MAX_ITERATIONS=3

# Delay between iterations in milliseconds
# Default: 5000 (5 seconds)
# BOT_HQ_ITERATION_DELAY=5000

# =============================================================================
# DEVELOPMENT OPTIONS
# =============================================================================

# Enable debug logging
# DEBUG=bot-hq:*

# Node environment (development/production)
# NODE_ENV=development
